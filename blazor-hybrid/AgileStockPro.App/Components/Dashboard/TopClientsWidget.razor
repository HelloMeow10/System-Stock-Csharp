@using AgileStockPro.App.Models.Dashboard

<FluentCard class="top-clients-widget">
    <div class="card-header">
        <FluentLabel Type="LabelType.H6">Clientes Destacados</FluentLabel>
    </div>
    <div class="card-content">
        @if (Clients is not null)
        {
            <div class="items-container">
                @foreach (var client in Clients)
                {
                    <div class="item">
                        <div class="item-info">
                            <FluentLabel Type="LabelType.P">@client.Name</FluentLabel>
                            <FluentLabel Type="LabelType.Small" Class="subtitle">@client.Orders ventas</FluentLabel>
                        </div>
                        <FluentLabel Type="LabelType.P">@client.Amount</FluentLabel>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Cargando clientes...</p>
        }
    </div>
</FluentCard>

@code {
    [Parameter]
    public IEnumerable<TopClientModel>? Clients { get; set; }
}