@using AgileStockPro.App.Models.Dashboard

<FluentCard class="recent-activity-widget">
    <div class="card-header">
        <FluentLabel Type="LabelType.H5">Actividad Reciente</FluentLabel>
    </div>
    <div class="card-content">
        @if (Activities is not null && Activities.Any())
        {
            <div class="activity-list">
                @foreach (var item in Activities)
                {
                    <div class="activity-item">
                        <div class="timeline-dot"></div>
                        <div class="activity-details">
                            <FluentLabel Type="LabelType.P">@item.Action</FluentLabel>
                            <FluentLabel Type="LabelType.P" Class="detail-label">@item.Detail</FluentLabel>
                            <FluentLabel Type="LabelType.P" Class="time-label">@item.Time</FluentLabel>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No hay actividad reciente para mostrar.</p>
        }
    </div>
</FluentCard>

@code {
    [Parameter]
    public IEnumerable<RecentActivityModel>? Activities { get; set; }
}