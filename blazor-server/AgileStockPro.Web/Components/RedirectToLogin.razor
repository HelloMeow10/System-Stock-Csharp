@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

@code {
    protected override void OnInitialized()
    {
        // Redirige a /login preservando la URL actual como returnUrl para volver despu√©s de autenticarse
        var currentUri = Navigation.Uri;
        var baseUri = Navigation.BaseUri.TrimEnd('/');
        var relative = currentUri.StartsWith(baseUri) ? currentUri[baseUri.Length..] : currentUri;
        var encodedReturnUrl = Uri.EscapeDataString("/" + relative.TrimStart('/'));

        Navigation.NavigateTo($"/login?returnUrl={encodedReturnUrl}", forceLoad: true);
    }
}
