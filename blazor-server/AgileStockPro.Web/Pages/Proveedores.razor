@page "/proveedores"
@using BusinessLogic.Services
@using Contracts
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject ISupplierService SupplierService
@inject AgileStockPro.Web.Services.IAuthService AuthService
@inject IToastService Toast

<PageTitle>Proveedores</PageTitle>

<div style="padding: 20px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h1>Proveedores</h1>
        @if (currentUser?.IsAdmin == true)
        {
            <button class="btn btn-primary" @onclick="OpenCreateModal">Nuevo Proveedor</button>
        }
    </div>

    <input class="search" style="margin-bottom:20px;" placeholder="Buscar por nombre o CUIT..." value="@searchTerm" @oninput="OnSearchInput" />

    @if (suppliers == null)
    {
        <div class="loading" style="padding:1rem; font-size:.9rem; opacity:.8;">Cargando proveedores...</div>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Razón Social</th>
                    <th>CUIT</th>
                    <th>Teléfono</th>
                    <th>Ciudad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in suppliers)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Codigo</td>
                        <td>@p.Nombre</td>
                        <td>@p.RazonSocial</td>
                        <td>@p.Cuit</td>
                        <td>@p.Telefono</td>
                        <td>@p.Ciudad</td>
                        <td>
                            @if (currentUser?.IsAdmin == true)
                            {
                                <button class="btn" @onclick="() => OpenEditModal(p)">Editar</button>
                                <button class="btn" @onclick="() => Delete(p)">Eliminar</button>
                            }
                            else
                            {
                                <span class="muted" style="font-size:12px;">Solo lectura</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@if (showModal)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <h3 style="margin-top:0;">@(isEditing ? "Editar Proveedor" : "Nuevo Proveedor")</h3>
            
            <div class="form-grid">
                <div class="form-group">
                    <label>Código</label>
                    <input class="input" @bind="formModel.Codigo" />
                </div>
                <div class="form-group">
                    <label>Nombre</label>
                    <input class="input" @bind="formModel.Nombre" />
                </div>
                <div class="form-group">
                    <label>Razón Social</label>
                    <input class="input" @bind="formModel.RazonSocial" />
                </div>
                <div class="form-group">
                    <label>CUIT</label>
                    <input class="input" @bind="formModel.Cuit" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input class="input" @bind="formModel.Email" />
                </div>
                <div class="form-group">
                    <label>Teléfono</label>
                    <input class="input" @bind="formModel.Telefono" />
                </div>
                <div class="form-group">
                    <label>Dirección</label>
                    <input class="input" @bind="formModel.Direccion" />
                </div>
                <div class="form-group">
                    <label>Ciudad</label>
                    <input class="input" @bind="formModel.Ciudad" />
                </div>
                 <div class="form-group">
                    <label>Provincia</label>
                    <input class="input" @bind="formModel.Provincia" />
                </div>
                 <div class="form-group">
                    <label>Tiempo Entrega (días)</label>
                    <input class="input" type="number" @bind="formModel.TiempoEntrega" />
                </div>
            </div>

            <div class="modal-actions" style="display:flex; justify-content:flex-end; gap:.5rem; margin-top:20px;">
                <button class="btn" @onclick="CloseModal" disabled="@isSubmitting">Cancelar</button>
                <button class="btn btn-primary" @onclick="Save" disabled="@isSubmitting">@(isSubmitting ? "Guardando..." : "Guardar")</button>
            </div>
        </div>
    </div>
}

<style>
    .modal-backdrop { position: fixed; inset:0; background: rgba(0,0,0,0.55); display:flex; justify-content:center; align-items:flex-start; padding-top:4vh; z-index:1000; }
    .modal-content { background: var(--neutral-layer-1); color: var(--neutral-foreground-rest); padding:20px 22px; border-radius:12px; width:600px; max-width:92%; max-height:90vh; overflow-y:auto; border:1px solid var(--container-border); box-shadow:0 40px 100px rgba(2,6,23,0.55); }
    .form-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 10px; }
    .form-group { display:flex; flex-direction:column; gap:4px; }
    @@media (max-width: 600px) { .form-grid { grid-template-columns: 1fr; } }
</style>

@code {
    private IEnumerable<SupplierDto>? suppliers;
    private string searchTerm = "";
    private AgileStockPro.Web.Models.AppUser? currentUser;
    
    // Modal state
    private bool showModal;
    private bool isEditing;
    private bool isSubmitting;
    private SupplierFormModel formModel = new();
    private int editingId;

    protected override async Task OnInitializedAsync()
    {
        currentUser = await AuthService.GetCurrentUserAsync();
        await LoadData();
    }

    private async Task LoadData()
    {
        suppliers = await SupplierService.GetAllAsync();
    }

    private async Task Search(string? term)
    {
        searchTerm = term ?? "";
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            await LoadData();
        }
        else
        {
            suppliers = await SupplierService.SearchAsync(searchTerm);
        }
    }

    private async Task OnSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        await Search(searchTerm);
    }

    private void OpenCreateModal()
    {
        isEditing = false;
        formModel = new();
        showModal = true;
    }

    private void OpenEditModal(SupplierDto supplier)
    {
        isEditing = true;
        editingId = supplier.Id;
        formModel = new SupplierFormModel
        {
            Codigo = supplier.Codigo,
            Nombre = supplier.Nombre,
            RazonSocial = supplier.RazonSocial,
            Cuit = supplier.Cuit,
            Email = supplier.Email,
            Telefono = supplier.Telefono,
            Direccion = supplier.Direccion,
            Ciudad = supplier.Ciudad,
            Provincia = supplier.Provincia,
            TiempoEntrega = supplier.TiempoEntrega
        };
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        formModel = new();
    }

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(formModel.Nombre))
        {
            Toast.ShowError("El nombre es requerido.");
            return;
        }

        isSubmitting = true;
        try
        {
            if (isEditing)
            {
                var update = new UpdateSupplierRequest
                {
                    Id = editingId,
                    Codigo = formModel.Codigo,
                    Nombre = formModel.Nombre,
                    RazonSocial = formModel.RazonSocial,
                    Cuit = formModel.Cuit,
                    Email = formModel.Email,
                    Telefono = formModel.Telefono,
                    Direccion = formModel.Direccion,
                    Ciudad = formModel.Ciudad,
                    Provincia = formModel.Provincia,
                    TiempoEntrega = formModel.TiempoEntrega
                };
                await SupplierService.UpdateAsync(update);
                Toast.ShowSuccess("Proveedor actualizado.");
            }
            else
            {
                var create = new CreateSupplierRequest
                {
                    Codigo = formModel.Codigo,
                    Nombre = formModel.Nombre,
                    RazonSocial = formModel.RazonSocial,
                    Cuit = formModel.Cuit,
                    Email = formModel.Email,
                    Telefono = formModel.Telefono,
                    Direccion = formModel.Direccion,
                    Ciudad = formModel.Ciudad,
                    Provincia = formModel.Provincia,
                    TiempoEntrega = formModel.TiempoEntrega
                };
                await SupplierService.CreateAsync(create);
                Toast.ShowSuccess("Proveedor creado.");
            }
            CloseModal();
            await LoadData();
        }
        catch (Exception ex)
        {
            Toast.ShowError(ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task Delete(SupplierDto supplier)
    {
        // Simple confirmation via browser confirm would be ideal but not available in server-side blazor easily without JS interop.
        // For now, we'll just delete. User asked to fix the button, implying it wasn't working.
        try 
        {
            await SupplierService.DeleteAsync(supplier.Id);
            Toast.ShowSuccess("Proveedor eliminado.");
            await LoadData();
        }
        catch(Exception ex)
        {
            Toast.ShowError("Error al eliminar: " + ex.Message);
        }
    }

    class SupplierFormModel
    {
        public string Codigo { get; set; } = string.Empty;
        public string Nombre { get; set; } = string.Empty;
        public string RazonSocial { get; set; } = string.Empty;
        public string Cuit { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Telefono { get; set; } = string.Empty;
        public string Direccion { get; set; } = string.Empty;
        public string Ciudad { get; set; } = string.Empty;
        public string Provincia { get; set; } = string.Empty;
        public int TiempoEntrega { get; set; }
    }
}
