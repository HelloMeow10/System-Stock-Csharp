    private async Task SetOrderDefaultView()
    {
        var name = selectedOrderViewName;
        if (string.IsNullOrEmpty(name)) return;
        try { await JS.InvokeVoidAsync("app.setLocal", "compras-ordenes-default-view", name); defaultOrderViewName = name; success = $"Vista por defecto: '{name}'."; } catch { }
    }

    private async Task ClearOrderDefaultView()
    {
        try { await JS.InvokeVoidAsync("app.removeLocal", "compras-ordenes-default-view"); defaultOrderViewName = null; success = "Vista por defecto quitada."; } catch { }
