    private void ToggleOrderImport()
    {
        showOrderImport = !showOrderImport;
        if (!showOrderImport) importOrderViewsJson = null;
    }

    private async Task ImportOrderViews()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(importOrderViewsJson)) return;
            var dict = JsonSerializer.Deserialize<Dictionary<string, OrderFilters>>(importOrderViewsJson!);
            if (dict == null) { error = "JSON inválido"; return; }
            if (!orderImportMerge || savedOrderViews == null)
            {
                savedOrderViews = dict;
            }
            else
            {
                foreach (var kv in dict)
                {
                    savedOrderViews[kv.Key] = kv.Value;
                }
            }
            await JS.InvokeVoidAsync("app.setLocal", "compras-ordenes-views", JsonSerializer.Serialize(savedOrderViews));
            success = "Vistas importadas.";
            showOrderImport = false;
            importOrderViewsJson = null;
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private async Task OnOrderSearchInput(ChangeEventArgs e)
    {
        orderViewsSearch = e.Value?.ToString();
        try { await JS.InvokeVoidAsync("app.setLocal", "compras-ordenes-views-search", orderViewsSearch ?? ""); } catch { }
    }

    private async Task ApplyLastOrderView()
    {
        try
        {
            var last = await JS.InvokeAsync<string?>("app.getLocal", "compras-ordenes-last-view");
            if (string.IsNullOrWhiteSpace(last) || savedOrderViews == null || !savedOrderViews.ContainsKey(last!)) return;
            selectedOrderViewName = last;
            await ApplyOrderView();
        }
        catch { }
    }

    private async Task RenameOrderView()
    {
        var oldName = selectedOrderViewName;
        var newName = renameOrderViewName?.Trim();
        if (string.IsNullOrEmpty(oldName) || string.IsNullOrEmpty(newName) || savedOrderViews == null) return;
        if (savedOrderViews.ContainsKey(newName)) { error = "Ya existe una vista con ese nombre"; return; }
        var val = savedOrderViews[oldName];
        savedOrderViews[newName] = val;
        savedOrderViews.Remove(oldName);
        await JS.InvokeVoidAsync("app.setLocal", "compras-ordenes-views", JsonSerializer.Serialize(savedOrderViews));
        selectedOrderViewName = newName;
        if (currentOrderViewName == oldName) currentOrderViewName = newName;
        success = "Vista renombrada.";
    }

    private void ShowMoreOrders()
    {
        var total = orders?.Count ?? 0;
        showOrdersCount = Math.Min(showOrdersCount + 20, total);
    }

    private void ShowAllOrders()
    {
        showOrdersCount = orders?.Count ?? 0;
    }

    private void ResetOrdersView()
    {
        showOrdersCount = 20;
    }

    private async Task OnOrderPageSizeChange(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out var sz) && sz > 0)
        {
            showOrdersCount = sz;
            try
            {
                var f = new OrderFilters { Proveedor = filterProveedor, Estado = filterEntregado, ReceiveUserId = receiveUserId, PageSize = showOrdersCount };
                await JS.InvokeVoidAsync("app.setLocal", "compras-ordenes-filters", JsonSerializer.Serialize(f));
            }
            catch { }
        }
    }
