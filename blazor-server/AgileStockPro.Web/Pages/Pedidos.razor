@page "/pedidos"
@using AgileStockPro.Web.Services
@using AgileStockPro.Web.Models
@using AgileStockPro.Web.Components
@inject IAppDataService Data

<AuthGuard>
<PageHeader Title="Pedidos" />

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="error">@error</div>
}
else if (items is null)
{
	<p>Cargando...</p>
}
else
{
	<table>
		<thead>
			<tr>
				<th>#</th>
				<th>Cliente</th>
				<th>Fecha</th>
				<th>Total</th>
				<th>Estado</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var p in items)
		{
			<tr>
				<td>@p.Id</td>
				<td>@p.Customer</td>
				<td>@p.Date.ToString("dd/MM/yyyy")</td>
				<td>$@p.Total</td>
				<td>@p.Status</td>
			</tr>
		}
		</tbody>
	</table>
}

</AuthGuard>

@code {
	private IReadOnlyList<Pedido>? items;
	private string? error;
	protected override async Task OnInitializedAsync()
	{
		try { items = await Data.GetOrdersAsync(); }
		catch (Exception ex) { error = ex.Message; }
	}
}
