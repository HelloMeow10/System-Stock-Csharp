@page "/facturacion"
@using AgileStockPro.Web.Services
@using AgileStockPro.Web.Models
@inject IAppDataService Data

<PageHeader Title="FacturaciÃ³n" />

@if (items is null)
{
	<p>Cargando...</p>
}
else
{
	<table>
		<thead>
			<tr>
				<th>#</th>
				<th>Cliente</th>
				<th>Fecha</th>
				<th>Total</th>
				<th>Estado</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var f in items)
		{
			<tr>
				<td>@f.Id</td>
				<td>@f.Customer</td>
				<td>@f.Date.ToString("dd/MM/yyyy")</td>
				<td>@f.Total.ToString("C")</td>
				<td>@f.Status</td>
			</tr>
		}
		</tbody>
	</table>
}

@code {
	private IReadOnlyList<Factura>? items;
	protected override async Task OnInitializedAsync()
	{
		items = await Data.GetInvoicesAsync();
	}
}
