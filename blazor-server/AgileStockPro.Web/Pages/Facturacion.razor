@page "/facturacion"
@using AgileStockPro.Web.Services
@using AgileStockPro.Web.Models
@using AgileStockPro.Web.Components
@inject IAppDataService Data

<AuthGuard>
<PageHeader Title="FacturaciÃ³n" />

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="error">@error</div>
}
else if (items is null)
{
	<p>Cargando...</p>
}
else
{
	<table>
		<thead>
			<tr>
				<th>#</th>
				<th>Cliente</th>
				<th>Fecha</th>
				<th>Total</th>
				<th>Estado</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var f in items)
		{
			<tr>
				<td>@f.Id</td>
				<td>@f.Customer</td>
				<td>@f.Date.ToString("dd/MM/yyyy")</td>
				<td>@f.Total.ToString("C")</td>
				<td>@f.Status</td>
			</tr>
		}
		</tbody>
	</table>
}

</AuthGuard>

@code {
	private IReadOnlyList<Factura>? items;
	private string? error;
	protected override async Task OnInitializedAsync()
	{
		try { items = await Data.GetInvoicesAsync(); }
		catch (Exception ex) { error = ex.Message; }
	}
}
