    private async Task RenameQuoteView()
    {
        var oldName = selectedQuoteViewName;
        var newName = renameQuoteViewName?.Trim();
        if (string.IsNullOrEmpty(oldName) || string.IsNullOrEmpty(newName) || savedQuoteViews == null) return;
        if (savedQuoteViews.ContainsKey(newName)) { error = "Ya existe una vista con ese nombre"; return; }
        var val = savedQuoteViews[oldName];
        savedQuoteViews[newName] = val;
        savedQuoteViews.Remove(oldName);
        await JS.InvokeVoidAsync("app.setLocal", "compras-presupuestos-views", JsonSerializer.Serialize(savedQuoteViews));
        selectedQuoteViewName = newName;
        if (currentQuoteViewName == oldName) currentQuoteViewName = newName;
        success = "Vista renombrada.";
    }
