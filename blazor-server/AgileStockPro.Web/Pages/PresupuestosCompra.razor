    private async Task ApplyQuoteView()
    {
        var name = selectedQuoteViewName;
        if (string.IsNullOrEmpty(name) || savedQuoteViews == null || !savedQuoteViews.ContainsKey(name)) return;
        var f = savedQuoteViews[name];
        filterProveedor = f.Proveedor;
        filterDesde = f.Desde;
        filterHasta = f.Hasta;
        newQuoteSupplierId = f.NewProveedorId;
        showQuotesCount = f.PageSize ?? showQuotesCount;
        if (!string.IsNullOrEmpty(f.SortField)) sortQuotesField = f.SortField!;
        if (!string.IsNullOrEmpty(f.SortDir)) sortQuotesDir = f.SortDir!;
        await LoadQuotes();
        success = $"Vista '{name}' aplicada.";
        try { await JS.InvokeVoidAsync("app.setLocal", "compras-presupuestos-last-view", name); } catch { }
        currentQuoteViewName = name;
    }

    private async Task DeleteQuoteView()
    {
        var name = selectedQuoteViewName;
        if (string.IsNullOrEmpty(name) || savedQuoteViews == null || !savedQuoteViews.ContainsKey(name)) return;
        var ok = await JS.InvokeAsync<bool>("confirm", $"Eliminar vista '{name}'?");
        if (!ok) return;
        savedQuoteViews.Remove(name);
        await JS.InvokeVoidAsync("app.setLocal", "compras-presupuestos-views", JsonSerializer.Serialize(savedQuoteViews));
        selectedQuoteViewName = null;
        success = $"Vista eliminada.";
        try { var last = await JS.InvokeAsync<string?>("app.getLocal", "compras-presupuestos-last-view"); if (last == name) { await JS.InvokeVoidAsync("app.removeLocal", "compras-presupuestos-last-view"); } } catch { }
        try { var defv = await JS.InvokeAsync<string?>("app.getLocal", "compras-presupuestos-default-view"); if (defv == name) { await JS.InvokeVoidAsync("app.removeLocal", "compras-presupuestos-default-view"); defaultQuoteViewName = null; } } catch { }
        if (currentQuoteViewName == name) currentQuoteViewName = null;
    }

