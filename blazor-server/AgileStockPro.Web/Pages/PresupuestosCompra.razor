    private async Task ImportQuoteViews()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(importQuoteViewsJson)) return;
            var dict = JsonSerializer.Deserialize<Dictionary<string, Filters>>(importQuoteViewsJson!);
            if (dict == null) { error = "JSON inválido"; return; }
            if (!quoteImportMerge || savedQuoteViews == null)
            {
                savedQuoteViews = dict;
            }
            else
            {
                foreach (var kv in dict)
                {
                    savedQuoteViews[kv.Key] = kv.Value; // override duplicates
                }
            }
            await JS.InvokeVoidAsync("app.setLocal", "compras-presupuestos-views", JsonSerializer.Serialize(savedQuoteViews));
            success = "Vistas importadas.";
            showQuoteImport = false;
            importQuoteViewsJson = null;
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

